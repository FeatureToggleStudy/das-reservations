@model ReviewViewModel
@{
    ViewData["Title"] = "Reservations";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Check your information</h1>

        <p>You are securing funding for a non-levy employer to take on an apprentice. <br/>
            This will be paid directly to the training provider, who the employer will confirm at a later date.</p>

        <div class="govuk-summary-list">
          
            <dl class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Employer
                </dt>
                <dd class="govuk-summary-list__value">
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="">
                    </a>
                </dd>
            </dl>
          
            <dl class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Apprenticeship training start date
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.StartDate
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="">
                    </a>
                </dd>
            </dl>
          
            <dl class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Apprenticeship training
                </dt>
                <dd class="govuk-summary-list__value">
                    @if (Model.CourseId != null)
                    {
                        @Model.CourseDescription
                    }
                    <br />
                    <details class="govuk-details">
                        <summary class="govuk-details__summary">
                            <span class="govuk-details__summary-text">
                                Can I change the course?
                            </span>
                        </summary>
                        <div class="govuk-details__text">
                            You can change the course when adding an apprentice's details, without affecting your funding.
                        </div>
                    </details>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="">
                    </a>
                </dd>
            </dl>
        </div>

        <form method="post" asp-route="@Model.RouteName">
            <button type="submit" draggable="false" class="govuk-button">
                Confirm
            </button>
        </form>
    </div>
</div>