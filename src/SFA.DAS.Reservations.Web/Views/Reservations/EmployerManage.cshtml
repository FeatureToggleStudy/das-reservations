@model ManageViewModel

@{
    ViewData["Title"] = "Reservations";
}



@if (!Model.Reservations.Any())
{
    <div class="govuk-width-container">
        <a href="#" class="govuk-back-link">Back</a>
        <h1 class="govuk-heading-xl">Your funding reservations</h1>
        <main class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-heading-m">There are no funding reservations to use</h2>
                    <p class="govuk-body">You need to reserve funding in order to add a new apprentice.</p>
                    <button type="submit" class="govuk-button">Reserve funding</button>
                </div>
            </div>

        </main>
    </div>
}
else
{
    <div class="govuk-width-container">
        <a href="#" class="govuk-back-link">Back</a>

        <main class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl">Your funding reservations</h1>
                    <p class="govuk-heading-m"><a href="#" class="govuk-link"><strong>Secure more funding</strong></a></p>
                </div>
            </div>

            <table class="govuk-table responsive">
                <p class="govuk-body-s">@Model.Reservations.Count reservation@(Model.Reservations.Count != 1 ? "s" : null)</p>
                <thead class="govuk-table__head">
                    <tr>
                        <th scope="col" class="govuk-table__header"><span class="no-wrap">Organisation</span></th>
                        <th scope="col" class="govuk-table__header">Apprenticeship training course</th>
                        <th scope="col" class="govuk-table__header">Start date</th>
                        <th scope="col" class="govuk-table__header"></th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell" data-label="Organisation">@reservation.LegalEntityName</td>
                            <td class="govuk-table__cell" data-label="Apprenticeship training course">@reservation.CourseName</td>
                            <td class="govuk-table__cell" data-label="Start date"> @reservation.StartDateDescription</td>
                            <td class="govuk-table__cell" data-lavel="Add apprentice"><a href="#" class="govuk-link">Add apprentice</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>

}


