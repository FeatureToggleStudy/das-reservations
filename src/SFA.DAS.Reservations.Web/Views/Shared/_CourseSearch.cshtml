@model SelectCourseViewModel


<select id="course-search" name="SelectedCourseId" class="govuk-select" aria-describedby="choose-apprenticeship-hint">

    <option value="">Search for an apprenticeship </option>
    @foreach (var course in Model.Courses)
    {
        <option value="@course.Id" selected="@course.Selected">@course.Description</option>
    }
</select>
