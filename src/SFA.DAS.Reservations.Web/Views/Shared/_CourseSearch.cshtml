@using Newtonsoft.Json
@model ApprenticeshipTrainingViewModel

<h2 class="govuk-heading-m" >Which apprenticeship training will the apprentice take? (optional)</h2>
<label class="govuk-label" for="course-search">
    Search for a course
</label>
<select id="course-search" name="courseId" class="govuk-select" aria-describedby="choose-apprenticeship-hint">

    <option value="">Search for an apprenticeship </option>
    @foreach (var course in Model.Courses)
    {
        <option value="@JsonConvert.SerializeObject(course)" @(course.Id.Equals(Model.CourseId)?"selected":"") >@course.Title - Level: @course.Level</option>
    }
</select>
<span id="choose-apprenticeship-hint" class="govuk-hint govuk-!-margin-top-4" >
    This information can be changed later.
</span>